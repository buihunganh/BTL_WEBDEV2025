@{
    ViewData["Title"] = "Products";
    var target = Url.Action("Men", "Products");
}

<div class="container-fluid px-4 my-4">
    <p class="mb-2">Redirecting to <strong>Men</strong>...</p>
    <p class="small text-muted">If you are not redirected automatically, <a href="@target">click here</a>.</p>
</div>

<meta http-equiv="refresh" content="0; url=@target" />
<script>
  window.addEventListener('DOMContentLoaded', function(){
    try { window.location.replace('@target'); } catch (e) { window.location.href='@target'; }
  });
  // Fallback timeout
  setTimeout(function(){ if(location.pathname.toLowerCase().indexOf('/products/men') === -1){ location.href='@target'; } }, 500);
</script>
