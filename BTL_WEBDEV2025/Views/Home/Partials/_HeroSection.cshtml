<!-- Hero Section - Nike style -->
<section class="hero-section my-0">
    <div class="container-fluid px-0">
        <!-- Full-width hero banner -->
        <div class="hero-banner position-relative d-flex align-items-end justify-content-center has-video"
             style="min-height: 80vh; background: #000;">
            <video class="hero-video-bg" autoplay muted loop playsinline preload="metadata"
                   poster="/favicon.ico">
                <source src="/media/videos/hero.mp4" type="video/mp4" />
            </video>
            
            <!-- Hero content - Overlaid on bottom -->
            <div class="position-absolute w-100 h-100 d-flex align-items-end justify-content-center hero-content-layer" style="bottom: 80px; left: 0;">
                <div class="text-center px-4" style="max-width: 700px;">
                    <!-- Small text above title -->
                    <p class="mb-2" style="font-size: 0.875rem; font-weight: 400; color: #0a0a0a;">LeBron XXIII</p>
                    
                    <!-- Main title -->
                    <h1 class="fw-bold mb-3" style="font-size: 4rem; letter-spacing: -0.02em; line-height: 1.1; color: #9b0d0d;">
                        'THE CHOSEN ONE<br/>AND THE ONE WHO CHOSE'
                    </h1>
                    
                    <!-- Subtitle -->
                    <p class="mb-4" style="font-size: 1rem; font-weight: 400; color: #202020;">
                        Sharing the court with your son appeared unlikely. LeBron made it history.
                    </p>
                    
                    <!-- Action buttons -->
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                        <button class="btn btn-dark px-5 py-3 fw-bold" style="border-radius: 30px; font-size: 0.95rem; background: #000; border: none;">
                            Shop Now
                        </button>
                        <button class="btn btn-outline-dark px-5 py-3" style="border-radius: 30px; font-size: 0.95rem; background: transparent; border: 2px solid #000; color: #000;">
                            <i class="bi bi-play-circle me-2"></i>Watch
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


