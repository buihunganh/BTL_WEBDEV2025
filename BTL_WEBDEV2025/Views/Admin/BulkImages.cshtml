@{
    ViewData["Title"] = "Bulk Upload Images";
}

<div class="container-fluid px-4 my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Bulk Upload Images</h1>
        <a class="btn btn-outline-dark" href="@Url.Action("Index")">Back</a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <form asp-action="BulkImages" method="post" enctype="multipart/form-data" class="row g-3">
                <div class="col-12">
                    <label class="form-label">Images</label>
                    <input class="form-control" type="file" name="files" multiple accept=".jpg,.jpeg,.png,.webp" />
                    <div class="form-text">Chỉ nhận JPG/PNG/WEBP. Có thể chọn nhiều ảnh cùng lúc.</div>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Brand (tuỳ chọn)</label>
                    <input class="form-control" name="brand" placeholder="Nike / Adidas ..." />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Category (fallback)</label>
                    <input class="form-control" name="category" placeholder="Men / Women / Kid / Unisex" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="updateOnly" id="updateOnly" />
                        <label class="form-check-label" for="updateOnly">Chỉ cập nhật ảnh, không tạo sản phẩm mới</label>
                    </div>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-dark">Upload</button>
                </div>
            </form>
        </div>
    </div>
</div>


