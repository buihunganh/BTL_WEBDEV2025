@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABDDT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/admin-dashboard.css" />
    @await RenderSectionAsync("Styles", false)
</head>
<body>
    <div class="admin-sidebar">
        <div class="admin-logo">
            <i class="bi bi-kanban" style="color:#00e0c5"></i><span>ABDDT Admin</span>
        </div>
        <nav class="nav flex-column">
            <a class="nav-link @(ViewData["ActiveMenu"] as string == "dashboard" ? "active" : "")" asp-controller="Admin" asp-action="Index"><i class="bi bi-house"></i> <span>Tổng quan</span></a>
            <a class="nav-link @(ViewData["ActiveMenu"] as string == "products" ? "active" : "")" asp-controller="Admin" asp-action="Index" asp-route-tab="products"><i class="bi bi-box-seam"></i> <span>Sản phẩm</span></a>
            <a class="nav-link @(ViewData["ActiveMenu"] as string == "customers" ? "active" : "")" asp-controller="Admin" asp-action="Index" asp-route-tab="customers"><i class="bi bi-people"></i><span>Khách hàng</span></a>
            <a class="nav-link @(ViewData["ActiveMenu"] as string == "report" ? "active" : "")" asp-controller="Admin" asp-action="Index" asp-route-tab="report"><i class="bi bi-clipboard-data"></i> <span>Báo cáo</span></a>
            <a class="nav-link @(ViewData["ActiveMenu"] as string == "settings" ? "active" : "")" asp-controller="Admin" asp-action="Index" asp-route-tab="settings"><i class="bi bi-gear"></i> <span>Cài đặt</span></a>
            <a class="nav-link logout-link mt-3" asp-controller="Admin" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> <span>Logout</span></a>
        </nav>
        <div class="admin-avatar">
            <div class="avatar-ico"><i class="bi bi-person-circle"></i></div>
            <span class="ava-name">Admin</span>
        </div>
    </div>
    <div class="admin-content">
        @RenderBody()
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", false)
</body>
</html>
