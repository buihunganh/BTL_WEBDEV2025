@{
    var year = DateTime.UtcNow.Year;
}
<footer class="footer-section mt-5 pt-5 bg-dark text-light">
    <div class="container py-5">
        <div class="row g-4">
            <div class="col-12 col-md-4">
                <h6 class="text-uppercase mb-3">About</h6>
                <p class="small text-muted mb-0">ABDDT – a stylish demo storefront inspired by Nike. Built for learning and showcasing.</p>
            </div>
            <div class="col-6 col-md-2">
                <h6 class="text-uppercase mb-3">Shop</h6>
                <ul class="list-unstyled small">
                    <li><a href="/Products/Men" class="text-decoration-none text-light-50">Men</a></li>
                    <li><a href="/Products/Women" class="text-decoration-none text-light-50">Women</a></li>
                    <li><a href="/Products/Kid" class="text-decoration-none text-light-50">Kids</a></li>
                </ul>
            </div>
            <div class="col-6 col-md-2">
                <h6 class="text-uppercase mb-3">Support</h6>
                <ul class="list-unstyled small">
                    <li><a href="/Home/Privacy" class="text-decoration-none text-light-50">Privacy</a></li>
                    <li><a href="#" class="text-decoration-none text-light-50">Help Center</a></li>
                </ul>
            </div>
            <div class="col-12 col-md-4">
                <h6 class="text-uppercase mb-3">Newsletter</h6>
                <form class="d-flex gap-2">
                    <input class="form-control" placeholder="Your email" />
                    <button class="btn btn-light" type="button">Subscribe</button>
                </form>
            </div>
        </div>
        <hr class="border-secondary my-4" />
        <div class="d-flex justify-content-between small">
            <div>© @year ABDDT. All rights reserved.</div>
            <div class="d-flex gap-3">
                <a href="#" class="text-decoration-none text-light-50">Terms</a>
                <a href="#" class="text-decoration-none text-light-50">Cookies</a>
            </div>
        </div>
    </div>
</footer>

