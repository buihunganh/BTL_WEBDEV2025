<!-- Top Bar - Nike style thin black bar -->
<div class="top-bar bg-dark text-white" style="background-color: #000 !important;">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <!-- Left side - Jumpman Logo -->
        <div class="d-flex align-items-center">
            <a href="#" class="text-decoration-none" style="display: inline-block; transform: scale(0.9);">
                <img src="/media/images/shared/logojd.png" alt="Logo" width="18" height="22" loading="lazy" decoding="async" />
            </a>
        </div>
        
        <!-- Right side - Links -->
        <div class="top-bar-links d-flex align-items-center gap-3">
            <a href="#" class="text-white text-decoration-none" style="font-size: 0.75rem;">Find a Store</a>
            <span class="separator" style="color: rgba(255, 255, 255, 0.3);">|</span>
            <a href="#" class="text-white text-decoration-none" style="font-size: 0.75rem;">Help</a>
            <span class="separator" style="color: rgba(255, 255, 255, 0.3);">|</span>
            <span class="text-white" style="font-size: 0.75rem; opacity: 0.9; cursor: default; user-select: none;">Join Us</span>
            <span class="separator" style="color: rgba(255, 255, 255, 0.3);">|</span>
            @if (Context.Session.GetInt32("UserId") != null)
            {
                var name = Context.Session.GetString("UserName") ?? Context.Session.GetString("UserEmail") ?? "User";
                <a asp-controller="User" asp-action="Index" class="text-white text-decoration-none" style="font-size: 0.75rem;">Hello, @name</a>
                <span class="separator" style="color: rgba(255, 255, 255, 0.3);">|</span>
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-link p-0 text-white" style="font-size: 0.75rem; text-decoration: none;">Logout</button>
                </form>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="text-white text-decoration-none" style="font-size: 0.75rem;">Sign In</a>
            }
        </div>
    </div>
</div>

    